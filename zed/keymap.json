[
  {
    "context": "VimControl",
    "bindings": {
      // Move lines up/down using the <alt> jk keys
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "alt-g": ["task::Spawn", { "task_name": "lazygit" }],
      "alt-f": ["task::Spawn", { "task_name": "lazygit file" }]
    }
  }
]
